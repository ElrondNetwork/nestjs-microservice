  },
  "scripts": {
    "build": "lerna run build",
    "prebuild:prod": "lerna run clean",
    "format": "prettier \"**/*.ts\" \"packages/**/*.json\" --ignore-path ./.prettierignore --write && git status",
    "lint": "eslint \"{packages,tools}/**/*.ts\"",
    "lint:fix": "eslint \"{packages,tools}/**/*.ts\" --fix",
    "test": "lerna run test",
    "show:dependencies": "nx graph",
    "version": "lerna run version"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "eslint": "^8.33.0",
    "jest": "^29.4.1",
    "lerna": "^6.4.1",
    "nx": "^15.6.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "workspaces":[
    "packages/*"
  ]
}
