{
  "name": "sc-interactions",
  "version": "0.0.1",
  "author": "MultiversX",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/multiversx/mx-sdk-nestjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc --watch",
    "clean": "tsc --clean",
    "test": "jest"
  },
  "keywords": [
    "multiversx",
    "nestjs",
    "microservice",
    "template",
    "auth"
  ],
  "dependencies": {
    "@multiversx/sdk-network-providers": "^1.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>"
    ]
  }
}
