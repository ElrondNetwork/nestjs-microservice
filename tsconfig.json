{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "target": "es6",
    "sourceMap": true,
    "allowJs": false,
    "outDir": "dist",
    "lib": [
      "es7"
    ],
    "baseUrl": ".",
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
  },
  "include": [
    "packages",
    "tools"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ],
  "paths": {
    "@multiversx/sdk-nestjs-auth": [
      "packages/auth/src"
    ],
    "@multiversx/sdk-nestjs-common": [
      "packages/common/src"
    ],
  }
}